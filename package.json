{
  "name": "well-plates",
  "version": "1.0.0",
  "description": "Utility to manipulate positions on well plates",
  "main": "./lib/index.js",
  "module": "./lib-es6/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "lib-es6"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf lib lib-es6",
    "prepublishOnly": "npm run tsc",
    "test": "run-s test-only tslint",
    "test-only": "jest",
    "test-coverage": "jest --coverage",
    "test-travis": "run-s tslint test-coverage",
    "tsc": "run-s clean tsc-es5 tsc-es6",
    "tsc-es5": "tsc",
    "tsc-es6": "tsc --project tsconfig.es6.json",
    "tslint": "tslint --project tsconfig.base.json",
    "tslint-fix": "npm run tslint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/well-plates.git"
  },
  "keywords": [],
  "author": "Daniel Kostro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/well-plates/issues"
  },
  "homepage": "https://github.com/cheminfo/well-plates#readme",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  }
}
